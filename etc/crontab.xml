<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Cron/etc/crontab.xsd">
    <group id="default">
        <job name="ebizmarts_abandonedcart_send" instance="Ebizmarts\AbandonedCart\Model\Cron" method="abandoned">
            <schedule>*/10 * * * *</schedule>
        </job>
    <job name="ebizmarts_abandonedcart_cleancoupons" instance="Ebizmarts\AbandonedCart\Model\Cron" method="cleanAbandonedCartExpiredCoupons">
        <schedule>0 1 * * *</schedule>
    </job>
</config>
